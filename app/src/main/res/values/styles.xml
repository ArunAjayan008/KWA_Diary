<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#0073FF</item>
        <item name="colorAccent">#008EFF</item>
        <item name="android:actionBarSize">60dp</item>
    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="info_font">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/info_text</item>
    </style>

    <style name="info_font_light">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/info_text</item>
    </style>

    <style name="commonfontstyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="commonfont_light">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/normal_font</item>
    </style>

    <style name="title_bold">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/company_font</item>
    </style>

    <style name="title_normal">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/company_font</item>
    </style>

    <style name="small_font_light">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="small_font">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="explore_desc_icon">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="tint">@color/colorGray</item>
    </style>

    <style name="explore_desc_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/normal_font</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CollapsingToolbarLayoutCollapsedTextStyle" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="services_title_bold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tab_header_active">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <dimen name="info_text">12sp</dimen>
    <dimen name="normal_font">14sp</dimen>
    <dimen name="company_font">15sp</dimen>
    <dimen name="small_text">12sp</dimen>
</resources>